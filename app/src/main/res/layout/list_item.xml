<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="96dp"
    android:layout_margin="8dp"
    android:background="@drawable/list_item_background"
    android:gravity="center_vertical"
    android:padding="8dp">

    <TextView
        android:id="@+id/list_item_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2017/4/25"
        android:textColor="#0037ff"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/list_item_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/list_item_date"
        android:layout_marginTop="4dp"
        android:text="12:00"
        android:textColor="#0037ff"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/list_item_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/list_item_start"
        android:layout_marginTop="4dp"
        android:text="12:00"
        android:textColor="#0037ff"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/list_item_sign"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:scaleType="fitCenter"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/list_item_start"
        android:layout_marginLeft="16dp" />

</RelativeLayout>